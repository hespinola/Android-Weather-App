<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="#ECECEC">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/forecast_img"
            android:layout_margin="10dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/sunny_mini" />

        <TextView
            android:id="@+id/forecast_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp"
            android:text="Tomorrow"
            android:textColor="#595959"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/forecast_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="45dp"
            android:text="Clear"
            android:textColor="#96595959"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/forecast_max_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="end"
            android:textAlignment="viewEnd"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="22°"
            android:textColor="#595959"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/forecast_min_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="end"
            android:textAlignment="viewEnd"
            android:layout_marginRight="20dp"
            android:layout_marginTop="45dp"
            android:text="18°"
            android:textColor="#96595959"
            android:textSize="16dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>